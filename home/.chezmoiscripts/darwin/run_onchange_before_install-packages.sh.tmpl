#!/bin/bash

brew-setup() {
	if [ ! "$(command -v brew)" ]; then
		echo "==> Installing homebrew.."
		/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
	else
		echo "==> Homebrew already installed!"
	fi
}

brew-install() {
	{{ $taps := list
		"homebrew/bundle"
		"homebrew/cask-drivers"
		"homebrew/cask-fonts"
		"homebrew/cask-versions"
		"homebrew/services"
		"homeport/tap"
		"mdomke/git-semver"
		"neovim/neovim"
		"osx-cross/arm"
		"osx-cross/avr"
		"qmk/qmk"
	-}}

	{{ $brews := list
		"age"
		"bat"
		"cloc"
		"coreutils"
		"d2"
		"diffutils"
		"direnv"
		"fasd"
		"fd"
		"findutils"
		"fzf"
		"git"
		"git-delta"
		"git-quick-stats"
		"gitui"
		"gnu-getopt"
		"gnu-sed"
		"golines"
		"grc"
		"grep"
		"grpcurl"
		"helix"
		"hexyl"
		"homeport/tap/dyff"
		"htop"
		"httpie"
		"jq"
		"k9s"
		"kube-ps1"
		"magic-wormhole"
		"marksman"
		"mdomke/git-semver/git-semver"
		"mongosh"
		"moreutils"
		"mr"
		"mtr"
		"neofetch"
		"neovim"
		"node"
		"openssl@3"
		"pastel"
		"pinentry"
		"pinentry-mac"
		"pipx"
		"pstree"
		"pyright"
