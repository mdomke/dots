		"sd"
		"shellcheck"
		"shfmt"
		"showkey"
		"slides"
		"starship"
		"step"
		"stern"
		"tree"
		"watch"
		"wget"
		"wrk"
		"zsh"
	-}}

	{{ $casks := list
		"1password-cli"
		"appcleaner"
		"docker"
		"dropbox"
		"firefox"
		"font-fira-code-nerd-font"
		"font-fira-sans"
		"font-hack"
		"font-hasklug-nerd-font"
		"insomnia"
		"istat-menus"
		"kitty"
		"raycast"
		"spotify"
		"telegram"
	-}}

	brew bundle --no-lock --file=- <<-EOF
	{{ range ($taps | sortAlpha | uniq) -}}
	tap "{{ . }}"
	{{ end -}}
	{{ range ($brews | sortAlpha | uniq) -}}
	brew "{{ . }}"
	{{ end -}}
	{{ range ($casks | sortAlpha | uniq) -}}
	cask "{{ . }}"
	{{ end -}}	
	EOF
}

pipx-install() {
	{{ $packages := list 
		"black"
		"hatch"
		"isort"
		"pip-tools"
		"pre-commit"
		"pyupgrade"
	-}}

	{{ range ($packages | sortAlpha | uniq) -}}
	pipx install "{{ . }}"
	{{ end -}}
}

main() {
	brew-setup
	brew-install
	pipx-install
}

main "$@"
