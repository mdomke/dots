{
  "codeLens.enable": true,
  "coc.preferences.formatOnSaveFiletypes": ["python", "Markdown", "css", "json", "yaml", "java", "rust"],
  "java.format.settings.url": "~/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml",
  "java.format.onType.enabled": true,
  "java.import.gradle.enabled": true,
  "java.completion.enabled": true,
  "java.completion.guessMethodArguments": true,
  "java.referencesCodeLens.enabled": true,
  "java.implementationsCodeLens.enabled": true,
  "java.home": "~/.asdf/installs/java/openjdk-18/",
  "python.venvPath": "~/.virtualenvs",
  "python.linting.pylintEnabled": false,
  "python.linting.pylamaEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.enabled": true,
  "python.formatting.blackPath": "~/.local/bin/black",
  "python.formatting.blackArgs": ["-l", "100"],
  "python.formatting.provider": "black",
  "python.sortImports.path": "~/.local/bin/isort",
  "pyright.organizeimports.provider": "isort",
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.format.insertSpaceAfterSemicolonInForStatements": true,
  "typescript.format.insertSpaceBeforeAndAfterBinaryOperators": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "typescript.format.semicolons": "insert",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.paths": true,
  "typescript.suggest.autoImports": true,
  "yaml.format.enable": true,
  "yaml.format.proseWrap": "always",
  "yaml.hover": true,
  "yaml.completion": true,
  "yaml.schemas": {
    "kubernetes": "templates/*.yaml"
  },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  }
}
